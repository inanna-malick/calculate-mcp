// ðŸ”® Crystalline arithmetic grammar
expr = { SOI ~ additive ~ EOI }

additive = { multiplicative ~ (add_op ~ multiplicative)* }
add_op = { "+" | "-" }

multiplicative = { unary ~ (mul_op ~ unary)* }
mul_op = { "*" | "/" }

unary = { "-" ~ unary | primary }

primary = { number | "(" ~ additive ~ ")" }

number = @{ "-"? ~ ASCII_DIGIT+ ~ ("." ~ ASCII_DIGIT+)? }

WHITESPACE = _{ " " | "\t" | "\n" | "\r" }
